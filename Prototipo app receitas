    <script>
        // Simulação de funcionalidades do admin
        document.addEventListener('DOMContentLoaded', function() {
            // Ativação dos itens do menu
            const menuItems = document.querySelectorAll('.menu-item');
            menuItems.forEach(item => {
                item.addEventListener('click', function() {
                    menuItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
            
            // Simulação de logs de teste
            const logContainer = document.querySelector('.control-group:last-child div');
            const runTestsBtn = document.querySelector('.btn-success');
            
            runTestsBtn.addEventListener('click', function() {
                logContainer.innerHTML = '';
                addLog('> Iniciando testes automatizados...');
                
                setTimeout(() => addLog('> Teste de interface: OK'), 1000);
                setTimeout(() => addLog('> Teste de funcionalidades: OK'), 2000);
                setTimeout(() => addLog('> Teste de performance: OK'), 3000);
                setTimeout(() => addLog('> Teste de segurança: OK'), 4000);
                setTimeout(() => addLog('> Todos os testes passaram!'), 5000);
            });
            
            function addLog(message) {
                const logEntry = document.createElement('div');
                logEntry.textContent = message;
                logContainer.appendChild(logEntry);
                logContainer.scrollTop = logContainer.scrollHeight;
            }
        });
    </script>
